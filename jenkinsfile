pipeline{
  
  agent any
  def cmd_exec(command) {
    return bat(returnStdout: true, script: "${command}").trim()
  }
  
  stages {
  
    stage("run frontend") {
    
      steps {
        echo 'Executing yarn'
        nodejs('Node-10.17') {
            cmd_exec('bat "yarn install"')
        }
      }
    }
    
    stage("run backend") {
    
      steps {
        echo 'Executing gradle'
        withGradle() {
            cmd_exec('bat "./gradlew -v"')
        }
      }
    }
  }
}
