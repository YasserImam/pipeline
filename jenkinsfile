pipeline{
  
  agent any
  
  stages {
  
    stage("run frontend") {
    
      steps {
        echo 'Executing yarn'
        nodejs('Node-10.17') {
          batch 'yarn install'
        }
      }
    }
    
    stage("run backend") {
    
      steps {
        echo 'Executing gradle'
        withGradle() {
          batch './gradlew -v'
        }
      }
    }
  }
}
